  function tryCheckTerms() {
    // Find the Klaviyo iframe inside your form container
    const formContainer = document.querySelector('#klaviyo-consultation-form .klaviyo-form-XPDexx iframe');
    if (!formContainer || !formContainer.contentWindow) {
      setTimeout(tryCheckTerms, 500); // Try again until the iframe loads
