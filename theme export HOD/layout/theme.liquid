<script>
document.addEventListener('DOMContentLoaded', function () {
  const descriptionText = document.querySelector('.description-text');
  const toggleButton = document.querySelector('.toggle-button');

  // Function to truncate text to the first n words
  function truncateText(text, numWords) {
    const words = text.split(/\s+/);
    if (words.length <= numWords) return text;
    return words.slice(0, numWords).join(' ') + '...';
  }

  if (descriptionText && toggleButton) {
    // Store the full text and truncated version
    const fullText = descriptionText.innerHTML;
    const truncatedText = truncateText(fullText, 40); // Truncate to 40 words

    // Check if the content is longer than 40 words
    if (fullText.split(/\s+/).length > 40) {
      // Set initial truncated text and display the button
      descriptionText.innerHTML = truncatedText;
      toggleButton.style.display = 'inline';
    } else {
      // Hide the button if the content is short
      toggleButton.style.display = 'none';
    }

    // Add click event listener to toggle button
    toggleButton.addEventListener('click', function () {
      if (descriptionText.classList.contains('expanded')) {
        descriptionText.classList.remove('expanded');
        descriptionText.innerHTML = truncatedText; // Reset to truncated text
        toggleButton.textContent = 'Read More';
      } else {
        descriptionText.classList.add('expanded');
        descriptionText.innerHTML = fullText; // Show full text
        toggleButton.textContent = 'Read Less';
      }
    });
  }
});
</script>



  
