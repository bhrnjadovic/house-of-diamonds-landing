    }

    let doc;
    try {
      doc = formContainer.contentWindow.document;
    } catch (e) {
      setTimeout(tryCheckTerms, 500);
      return;
    }

    // Find the checkbox inside the Klaviyo form iframe
    const checkbox = doc.querySelector('input[type="checkbox"][name*="privacy"], input[type="checkbox"][id*="privacy"], input[type="checkbox"][name*="terms"], input[type="checkbox"][id*="terms"]');

    if (checkbox && !checkbox.checked) {
      checkbox.checked = true;
      checkbox.dispatchEvent(new Event('change', { bubbles: true }));
    } else {
      setTimeout(tryCheckTerms, 500); // keep checking until it appears
    }
  }

  tryCheckTerms();
});
