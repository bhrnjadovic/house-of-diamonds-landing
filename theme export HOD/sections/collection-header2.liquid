<div class="column1">
<h3>{{ collection.title }}</h3>
<p style="font-size: 24px;">{{ collection.description }}</p>
</div>
<div class="column2">
{% if collection.image %}
    {{ collection.image.src | collection_img_url: '872x300' | img_tag: collection.title }}
{% else %}
    {{ collection.products.first.featured_image.src | product_img_url: 'medium' | img_tag: collection.title }}
{% endif %}
</div>

</div> {% endcomment %}

